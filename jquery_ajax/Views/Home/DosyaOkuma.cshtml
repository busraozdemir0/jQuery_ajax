
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dosyadan veri okuma</h2>
<div id="divv">
    <button id="j1">Veri Al</button>
</div>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#j1").click(function () {
            $("#divv").load("/Content/sayfa.html", function (response, status, x) {    //txt dosyasından çekmek istersek "/Content/ankara.txt" yazmalıyız
            if (status == "success")
                alert("içerik başarıyla yüklendi"+"\n"+x.status+"\n"+x.statusText);
            if (status == "error")
                alert("içerik başarısız oldu" + "\n" + x.status + "\n" + x.statusText);
            })
        })
    })


</script>